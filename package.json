{
  "name": "apex-challenge-tracker",
  "version": "0.8.0",
  "description": "Track your Apex Legends challenges",
  "private": true,
  "scripts": {
    "test": "jest",
    "cy:run": "cypress run",
    "cypress:test": "start-server-and-test dev:py http://localhost:8000 cy:run",
    "cypress:open": "cypress open",
    "coverage": "nyc -r text -e .ts -x \"tests/*.test.ts\" npm run test",
    "build": "webpack",
    "dev": "npm run watch",
    "dev:py": "python -m http.server",
    "dev:reload": "browser-sync reload",
    "dev:browsersync": "browser-sync start",
    "watch": "concurrently --kill-others \"npm run dev:browsersync\"  \"npm run dev:py\" \"npm run watch:js\"",
    "watch:js": "nodemon --watch \"src/\" --watch \"content/\" --exec \"npm run build && npm run dev:reload\""
    
  },
  "nodemonConfig": {
    "ignore": [
      "test/*"
    ],
    "ext": "js,ts,html",
    "delay": 0
  },
  "author": "elec0",
  "license": "ISC",
  "devDependencies": {
    "@types/jasmine": "^3.10.3",
    "@types/jest": "^27.4.1",
    "@types/lz-string": "^1.3.34",
    "concurrently": "^7.0.0",
    "cypress": "^9.5.4",
    "expect": "^27.5.1",
    "html-loader": "^3.1.0",
    "jest": "^27.5.1",
    "jest-mock": "^27.5.1",
    "jsdom": "^19.0.0",
    "mock-local-storage": "^1.1.20",
    "nyc": "^15.1.0",
    "start-server-and-test": "^1.14.0",
    "ts-jest": "^27.1.4",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5",
    "watchify": "^4.0.0",
    "webpack": "^5.68.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "cash-dom": "^8.1.0",
    "jest-codemods": "^0.25.1",
    "lz-string": "^1.4.4"
  }
}
