{
  "name": "apex-challenge-tracker",
  "version": "0.0.1",
  "description": "Track your Apex Legends challenges",
  "private": true,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "webpack",
    "dev": "npm run watch",
    "dev:py": "python -m http.server",
    "dev:reload": "browser-sync reload",
    "dev:browsersync": "browser-sync start",
    "watch": "concurrently --kill-others \"npm run dev:browsersync\"  \"npm run dev:py\" \"npm run watch:js\"",
    "watch:js": "nodemon --watch \"src/\" --exec \"npm run build && npm run dev:reload\""
  },
  "nodemonConfig": {
    "ignore": [
      "test/*"
    ],
    "ext": "js,ts",
    "delay": 2500
  },
  "author": "elec0",
  "license": "ISC",
  "dependencies": {
    "recorder-js": "^1.0.7",
    "watchify": "^4.0.0"
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "webpack": "^5.68.0",
    "webpack-cli": "^4.9.2"
  }
}
